{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "rootDir": "."
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.js",
    "**/*.svelte",
    "main.ts",
    "vite-env.d.ts"
  ],
  "exclude": ["postcss.config.js", "svelte.config.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
